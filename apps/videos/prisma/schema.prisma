generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
  output        = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum VideoPersistancePublishStatus {
  PENDING    @map("PENDING")
  PROCESSING @map("PROCESSING")
  PROCESSED  @map("PROCESSED")
  PUBLISHED  @map("PUBLISHED")
  FAILED     @map("FAILED")
}

enum VideoPersistanceVisibilityStatus {
  PUBLIC   @map("PUBLIC")
  PRIVATE  @map("PRIVATE")
  UNLISTED @map("UNLISTED")
}

model Video {
  id                      String                           @id @default(uuid())
  ownerId                 String
  channelId               String
  title                   String
  videoThumbnailIdentifer String
  videoFileIdentifier     String
  description             String?
  categories              String[]
  videoPublishStatus      VideoPersistancePublishStatus    @default(PENDING)
  videoVisibiltyStatus    VideoPersistanceVisibilityStatus @default(PRIVATE)
  publishedAt             DateTime                         @default(now())
  updatedAt               DateTime                         @updatedAt

  @@index([ownerId])
  @@index([channelId])
  @@index([categories], type: Gin)
  @@index([publishedAt])
}
