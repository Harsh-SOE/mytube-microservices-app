generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
  output        = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum ReactionPersistanceStatus {
  LIKED      @map("LIKED")
  UNLIKED    @map("UNLIKED")
  DISLIKED   @map("DISLIKED")
  UNDISLIKED @map("UNDISLIKED")
}

model VideoReactions {
  id             String                    @id @default(uuid()) @map("_id")
  videoId        String
  userId         String
  reactionStatus ReactionPersistanceStatus
  createdAt      DateTime                  @default(now())
  updatedAt      DateTime                  @updatedAt()
}
