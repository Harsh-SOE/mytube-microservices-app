      "type": "application",
      "root": "apps/api-gateway",
      "sourceRoot": "apps/api-gateway/src",
      "entryFile": "main",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json",
        "webpack": true,
        "webpackConfigPath": "apps/api-gateway/webpack.config.js",
        "watchAssets": true
      }
    },
    "authz": {
      "type": "application",
      "root": "apps/authz",
      "sourceRoot": "apps/authz/src",
      "entryFile": "main",
