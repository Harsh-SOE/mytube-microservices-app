{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@app/clients": ["libs/clients/src"],
      "@app/clients/*": ["libs/clients/src/*"],
      "@app/contracts": ["libs/contracts/src"],
      "@app/contracts/*": ["libs/contracts/src/*"],
      "@app/counters": ["libs/counters/src"],
      "@app/counters/*": ["libs/counters/src/*"],
      "@app/errors": ["libs/errors/src"],
      "@app/errors/*": ["libs/errors/src/*"],
      "@app/infrastructure": ["libs/infrastructure/src"],
      "@app/infrastructure/*": ["libs/infrastructure/src/*"],
      "@app/proto": ["libs/proto/src"],
      "@app/proto/*": ["libs/proto/src/*"],
      "@app/testing": ["libs/testing/src"],
      "@app/testing/*": ["libs/testing/src/*"],
      "@app/utils": ["libs/utils/src"],
      "@app/utils/*": ["libs/utils/src/*"],
      "@auth/*": ["apps/auth/src/*"],
      "@cloud/*": ["apps/cloud/src/*"],
      "@comments/*": ["apps/comments/src/*"],
      "@gateway/*": ["apps/api-gateway/src/*"],
      "@likes-aggregator/*": ["apps/likes-aggregator/src/*"],
      "@likes/*": ["apps/likes/src/*"],
      "@peristance/likes-aggregator": [
        "apps/likes-aggregator/generated/prisma"
      ],
      "@peristance/user": ["apps/users/generated/prisma"],
      "@peristance/videos": ["apps/videos/generated/prisma"],
      "@persistance/auth": ["apps/auth/generated/prisma"],
      "@persistance/views-aggregator": [
        "apps/views-aggregator/generated/prisma"
      ],
      "@peristance/hub": ["apps/hub/generated/prisma"],
      "@transcoder/*": ["apps/video-transcoder/src/*"],
      "@users/*": ["apps/users/src/*"],
      "@videos/*": ["apps/videos/src/*"],
      "@views-aggregator/*": ["apps/views-aggregator/src/*"],
      "@views/*": ["apps/views/src/*"],
      "@hub/*": ["apps/hub/src/*"]
    }
  }
}
